<h1>Listing orders</h1>

<table>
  <tr>
    <th>Order</th>
    <th>Description</th>
    <th>Issued at</th>
    <th>Closed at</th>
    <th>Category</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.order_id %></td>
    <td><%= order.description %></td>
    <td><%= time_ago_in_words(order.issued_at, include_hours: true) %> ago</td>
    <td>in <%= time_ago_in_words(order.closed_at) %></td>
    <td><%= order.category.title %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path %>

<style>
table, td
{
    border-color: #600;
    border-style: solid;
}

table
{
    border-width: 0 0 1px 1px;
    border-spacing: 0;
    border-collapse: collapse;
}

td
{
    margin: 0;
    padding: 4px;
    border-width: 1px 1px 0 0;
    background-color: #FFC;
}
</style>